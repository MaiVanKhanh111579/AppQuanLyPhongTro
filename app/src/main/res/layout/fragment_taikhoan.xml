<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="30dp"
    tools:ignore="RtlHardcoded,RtlSymmetry">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal"
        tools:ignore="UselessLeaf,UselessParent">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/customer_circle_avatar"
            android:src="@drawable/ic_launcher_foreground"
            tools:ignore="ContentDescription,RtlHardcoded" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_taikhoan_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textColor="@color/black"
                android:textSize="20dp"
                tools:ignore="HardcodedText,SpUsage,TextSizeCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 điểm"
                android:textColor="@color/black"
                android:textSize="14dp"
                tools:ignore="HardcodedText,SpUsage,TextSizeCheck" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LLayout_sodutaikhoan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:backgroundTint="@color/greyEEEEEE"
        android:background="@drawable/customer_retangle_border"
        android:orientation="vertical"
        tools:ignore="UselessLeaf">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số dư tài khoản"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            tools:ignore="HardcodedText" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số dư đã duyệt"
                android:textColor="@color/grey8080"
                android:textSize="12dp"
                android:layout_alignParentStart="true"
                tools:ignore="HardcodedText,ObsoleteLayoutParam,SpUsage,TextContrastCheck,TextSizeCheck" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:text="0"
                android:layout_alignParentEnd="true"
                tools:ignore="HardcodedText,ObsoleteLayoutParam" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số dư đang duyệt"
                android:textColor="@color/grey8080"
                android:textSize="12dp"
                android:layout_alignParentStart="true"
                tools:ignore="HardcodedText,ObsoleteLayoutParam,SpUsage,TextContrastCheck,TextSizeCheck" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:text="0"
                android:layout_alignParentEnd="true"
                tools:ignore="HardcodedText,ObsoleteLayoutParam" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số lần giao dịch"
                android:textColor="@color/grey8080"
                android:textSize="12dp"
                android:layout_alignParentStart="true"
                tools:ignore="HardcodedText,ObsoleteLayoutParam,SpUsage,TextContrastCheck,TextSizeCheck" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:text="0"
                android:layout_alignParentEnd="true"
                tools:ignore="HardcodedText,ObsoleteLayoutParam" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/LLayout_tindang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LLayout_sodutaikhoan"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:backgroundTint="@color/greyEEEEEE"
        android:background="@drawable/customer_retangle_border"
        android:orientation="vertical"
        tools:ignore="UselessLeaf">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông tin đăng "
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            tools:ignore="HardcodedText" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tin đăng"
                android:textColor="@color/grey8080"
                android:textSize="12dp"
                android:layout_alignParentStart="true"
                tools:ignore="HardcodedText,ObsoleteLayoutParam,SpUsage,TextContrastCheck,TextSizeCheck" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:text="0"
                android:layout_alignParentEnd="true"
                tools:ignore="HardcodedText,ObsoleteLayoutParam" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lượt xem"
                android:textColor="@color/grey8080"
                android:textSize="12dp"
                android:layout_alignParentStart="true"
                tools:ignore="HardcodedText,ObsoleteLayoutParam,SpUsage,TextContrastCheck,TextSizeCheck" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:text="0"
                android:layout_alignParentEnd="true"
                tools:ignore="HardcodedText,ObsoleteLayoutParam" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LLayout_tindang"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/Rlayout_qltindang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            tools:ignore="UselessParent">
            <ImageView
                android:id="@+id/img_taikhoan_listcheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_listcheck_black"
                android:layout_alignParentStart="true"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/txt_taikhoan_qltindang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/img_taikhoan_listcheck"
                android:text="Quản lý tin đăng"
                android:textColor="@color/black"
                android:textSize="15dp"
                tools:ignore="HardcodedText,SpUsage,TextSizeCheck" />
            <ImageView
                android:id="@+id/img_taikhoan_qltindang_ic_arrowdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrowdown_black"
                android:layout_alignParentEnd="true"
                tools:ignore="ContentDescription" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/Rlayout_qlkhachang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            tools:ignore="UselessParent">
            <ImageView
                android:id="@+id/img_taikhoan_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_people_black"
                android:layout_alignParentStart="true"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/txt_taikhoan_qlkhachhang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/img_taikhoan_people"
                android:text="Quản lý khách hàng"
                android:textColor="@color/black"
                android:textSize="15dp"
                tools:ignore="HardcodedText,SpUsage,TextSizeCheck" />
            <ImageView
                android:id="@+id/img_taikhoan_qlkhachang_ic_arrowdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrowdown_black"
                android:layout_alignParentEnd="true"
                tools:ignore="ContentDescription" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/Rlayout_qltaichinh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            tools:ignore="UselessParent">
            <ImageView
                android:id="@+id/img_taikhoan_chart2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_chart2_black"
                android:layout_alignParentStart="true"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/txt_taikhoan_qltaichinh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/img_taikhoan_chart2"
                android:text="Quản lý tin đăng"
                android:textColor="@color/black"
                android:textSize="15dp"
                tools:ignore="HardcodedText,SpUsage,TextSizeCheck" />
            <ImageView
                android:id="@+id/img_taikhoan_qltaichinh_ic_arrowdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrowdown_black"
                android:layout_alignParentEnd="true"
                tools:ignore="ContentDescription" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/Rlayout_qltienich"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            tools:ignore="UselessParent">
            <ImageView
                android:id="@+id/img_taikhoan_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_setting_black"
                android:layout_alignParentStart="true"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/txt_taikhoan_qltienich"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/img_taikhoan_setting"
                android:text="Tiện ích"
                android:textColor="@color/black"
                android:textSize="15dp"
                tools:ignore="HardcodedText,SpUsage,TextSizeCheck" />
            <ImageView
                android:id="@+id/img_taikhoan_qltienich_ic_arrowdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrowdown_black"
                android:layout_alignParentEnd="true"
                tools:ignore="ContentDescription" />
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>